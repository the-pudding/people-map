#about
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	background-color rgba($bg, 0.85)
	z-index set-index('overlay') + 1
	cursor pointer
	display none
	&.is-visible
		display block

	.about__inner
		padding 1rem
		background-color $bg
		position absolute
		top 50%
		left 50%
		width 90%
		max-width 30rem
		transform translate(-50%, -50%)
		border-radius 6px
		// box-shadow 0 0 2px 1px $primary
		border 2px solid $primary

	p:first-of-type
		margin-top 0
	p:last-of-type
		margin-bottom 0

		
	h4
		font-weight 500
		margin 0
	a
		font-weight 500
	p
		set-type-size(x-small, true)
		+mq('bp-4')
			set-type-size(small, true)

	.btn--close
		background-color $off-black
		color $primary
		font-weight 700
		line-height 1
		width 2rem
		height 2rem
		border-radius 50%
		border 2px solid $primary
		position absolute
		top 0rem
		right 0rem
		width 2rem
		height 2rem
		border-radius 50%
		transform translate(50%, -50%)
		
		svg
			stroke $primary
			width 1rem
			vertical-align middle
			line
				stroke-width 3px
