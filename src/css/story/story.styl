/* CUSTOM STORY STYLE */
body
	color $white
	font-weight 400
	font-family $sans
	overflow hidden

main
	width 100%
	height 100vh
	overflow hidden

#map
	width 100%
	height 100%

.mapboxgl-ctrl-bottom-right
	position fixed
	// left 1.5rem
	bottom 0
	// right auto
	// transform translate(100%, 0%)
	+mq('bp-3')
		transform translate(0)
		right auto
	a
		border none

.mapboxgl-ctrl-bottom-left
	// left 2rem
	// transform translate(32.5%, 5%)
	+mq('bp-3')
		transform translate(0, -75%)
		
	a
		border none

#info
	margin 0
	background rgba($bg, 0.9)
	font-family $sans
	set-type-size(small, true)
	line-height 1.5
	padding 0.75rem
	padding-right 2.5rem
	position fixed
	bottom 0
	left 50%
	width 100%
	display none
	transform translate(-50%, 3px)
	z-index set-index(overlay)
	cursor pointer
	user-select none
	&.is-center
		text-align center
	&.is-visible
		display block
	+mq('bp-4')
		border-radius 6px
		max-width 21rem
		padding-right 0.75rem
	+mq('bp-7')
		max-width 25rem
	strong
		font-weight 700
		color $secondary