/* CUSTOM STORY STYLE */
body
	color $white
	font-weight 400
	font-family $sans

main
	width 100%
	height 100vh
	overflow hidden

#map
	width 100%
	height 100%

.mapboxgl-ctrl-bottom-right
	position fixed
	left 0
	bottom 0
	right auto
	a
		border none

.mapboxgl-ctrl-bottom-left
	transform translateY(-75%)
	a
		border none

#marker
	margin 0
	background rgba($bg, 0.9)
	font-family $sans
	set-type-size(small, true)
	line-height 1.5
	max-width 20rem
	padding 0.75rem
	border-radius 6px
	position fixed
	bottom 0
	top auto
	left 50%
	transform translate(-50%, 3px)
	strong
		font-weight 700
		color $secondary