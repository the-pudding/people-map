/* CUSTOM STORY STYLE */
body
	color $white
	font-weight 400
	font-family $sans

main
	width 100%
	height 100vh
	overflow hidden

#map
	width 100%
	height 100%

.mapboxgl-ctrl-bottom-right
	display none

#marker
	margin 0
	background $bg
	font-family $sans
	set-type-size(small, true)
	line-height 1.35
	max-width 20rem
	padding 0.5rem
	border-radius 6px

#about
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	background-color rgba($bg, 0.85)
	z-index set-index('overlay') + 1
	cursor pointer
	display none
	&.is-visible
		display block

	.about__inner
		padding 2rem 1rem 1rem 1rem
		background-color $bg
		position absolute
		top 50%
		left 50%
		width 90%
		max-width 30rem
		transform translate(-50%, -50%)
		border-radius 6px
		// box-shadow 0 0 2px 1px $primary
		border 2px solid $primary
		
	h4
		font-weight 500
		margin 0
	a
		font-weight 500
	p
		set-type-size(small, true)

	.btn--about
		position absolute
		top 1rem
		right 1rem
		width 2rem
		height 2rem
		border-radius 50%
		svg
			stroke $primary
			width 1rem
			vertical-align middle
			line
				stroke-width 3px
