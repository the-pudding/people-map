/* CUSTOM STORY STYLE */
body
	color $white
	font-weight 400
	font-family $sans
	overflow hidden

main
	width 100%
	height 100vh
	overflow hidden

#map
	width 100%
	height 100%

.mapboxgl-ctrl-bottom-right
	position fixed
	left 0
	bottom 0
	right auto
	transform translate(100%, 0%)
	+mq('bp-3')
		transform translate(0)
	a
		border none

.mapboxgl-ctrl-bottom-left
	transform translate(32.5%, 0)
	+mq('bp-3')
		transform translate(0, -75%)
		
	a
		border none

#info
	margin 0
	background rgba($bg, 0.9)
	font-family $sans
	set-type-size(small, true)
	line-height 1.5
	max-width 21rem
	padding 0.75rem
	border-radius 6px
	position fixed
	bottom 0
	top auto
	right 0
	display none
	&.is-visible
		display block
	+mq('bp-6')
		left 50%
		right auto
		transform translate(-50%, 3px)
	strong
		font-weight 700
		color $secondary