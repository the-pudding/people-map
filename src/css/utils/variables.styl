// -------------------
// Breakpoints
// -------------------
$mq_vars = {
    bp-2: '(min-width: 20em)' // 320px
    bp-3: '(min-width: 30em)' // 480px
    bp-4: '(min-width: 40em)' // 640px
    bp-5: '(min-width: 50em)' // 800px
		bp-6: '(min-width: 60em)' // 960px
		bp-7: '(min-width: 70em)' // 1080px
}

// -------------------
// Typefaces
// -------------------
$rubik = 'Rubik'

$sans-fb = Helvetica, Arial, sans-serif
$serif-fb = Georgia, Times, serif
$sans = $rubik, $sans-fb
$sans-display = $rubik, $sans-fb
$serif = $serif-fb
$serif-display = $serif-fb
$mono = Menlo, Consolas, Monaco, 'Courier New', monospace

// z-index
$z-index = {
    bottom: -100
    middle: 0
    top: 100
    overlay: 1000
}

// Color
$black = #000
$off-black = #1B1B21
$gray-dark = #5b5b5b
$gray = #A5BAD1
$gray-light = #c9c9c9
$off-white = #DFEAF6
$white = #fff
$purple = #B27CCB
$green = #44da71
$bg = $off-black
$fg = $white
$primary= $purple
$secondary = $green

$column-width = 40rem

$type-size = {
    xxx-small: {
        size: 10px,
        line-height: 1.65,
    }
    xx-small: {
        size: 11px,
        line-height: 1.65,
    }
    x-small: {
        size: 12px,
        line-height: 1.65
    }
    small: {
        size: 14px,
        line-height: 1.65   
    }
    root: {
        size: 16px,
        line-height: 1.65
    }
    medium: {
        size: 18px,
        line-height: 1.65
    }
    large: {
        size: 20px,
        line-height: 1.5
    }
    x-large: {
        size: 24px,
        line-height: 1.4
    }
    xx-large: {
        size: 32px,
        line-height: 1.4
    }
    xxx-large: {
        size: 40px,
        line-height: 1.4
    }
    xxxx-large: {
        size: 48px,
