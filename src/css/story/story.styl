/* CUSTOM STORY STYLE */
body
	color $white
	font-weight 400
	font-family $sans

main
	width 100%
	height 100vh

#map
	width 100%
	height 100%

.mapboxgl-ctrl-bottom-right
	display none

#marker
	margin 0
	background $bg
	font-family $sans
	set-type-size(small, true)
	line-height 1.35
	max-width 20rem
	padding 0.5rem
	border-radius 6px